Vagrant.configure("2") do |config|
  config.vm.box = "debian/bullseye64"
  
  # Configurar red privada con IP fija
  config.vm.network "private_network", ip: "192.168.56.10"
  
  # Configurar nombre de la m√°quina
  config.vm.hostname = "servidor-nginx"
  
  # Opcional: configurar recursos
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 1
  end
end